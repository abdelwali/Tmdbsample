<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    android:id="@+id/linear_item_movie"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp">

        <TextView
            android:id="@+id/tv_nom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="3dp"
            android:layout_toEndOf="@+id/tv_image"
            android:layout_toRightOf="@+id/tv_image"
            android:text="title"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_nom"
            android:layout_alignStart="@+id/tv_nom"
            android:layout_below="@+id/tv_nom"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="4dp"
            android:text="Description"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/tv_reat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_nom"
            android:layout_alignStart="@+id/tv_nom"
            android:layout_below="@+id/tv_description"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="4dp"
            android:text="Rating :"
            android:drawableLeft="@drawable/ic_star_black_24dp"
            android:textSize="15sp" />


        <ImageView
            android:id="@+id/tv_image"
            android:contentDescription="poster"
            android:layout_width="90dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitXY" />




    </RelativeLayout>

</LinearLayout>